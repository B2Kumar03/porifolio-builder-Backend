<section class="py-20 bg-black max-w-[90%] m-auto" id="contact">
    <div class="container mx-auto px-8">
        <h2 class="text-3xl font-bold text-center text-white mb-8">Contact Information</h2>
        <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
            <div class="bg-[#04152D] p-4 rounded-lg shadow-md flex flex-col items-center gap-4">
                <i class="fa-solid fa-phone text-white text-3xl"></i>
                <div class="text-center">
                    <h3 class="text-xl font-bold text-white">Mobile</h3>
                    <p class="text-sm text-gray-400 mb-4">{{contact.mobile}}</p>
                </div>
            </div>
            <div class="bg-[#04152D] p-4 rounded-lg shadow-md flex flex-col items-center gap-4">
                <i class="fa-regular fa-envelope text-white text-3xl"></i>
                <div class="text-center">
                    <h3 class="text-xl font-bold text-white">Email</h3>
                    <p class="text-sm text-gray-400 mb-4">{{contact.email}}</p>
                </div>
            </div>
            <div class="bg-[#04152D] p-4 rounded-lg shadow-md flex flex-col items-center gap-4">
                <i class="fa-brands fa-linkedin-in text-white text-3xl"></i>
                <div class="text-center">
                    <h3 class="text-xl font-bold text-white">LinkedIn</h3>
                    <a href="{{contact.linkedin}}" class="text-blue-500 text-sm font-bold hover:text-blue-300" target="_blank">{{contact.linkedin}}</a>
                </div>
            </div>
            <div class="bg-[#04152D] p-4 rounded-lg shadow-md flex flex-col items-center gap-4">
                <i class="fa-brands fa-github text-white text-3xl"></i>
                <div class="text-center">
                    <h3 class="text-xl font-bold text-white">GitHub</h3>
                    <a href="{{contact.github}}" target="_blank" class="text-blue-500 text-sm font-bold hover:text-blue-300">{{contact.github}}</a>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row justify-between items-center gap-8">
            <!-- Logo and Description -->
            <div class="text-center lg:text-left">
                <h2 class="text-2xl font-bold mb-2">{{name}}'s Portfolio</h2>
                <p class="text-gray-400">Showcasing my work and skills as a front-end developer. <br> Explore my projects, learn about my tech stack, and find out <br> how to get in touch with me.</p>
            </div>
            <!-- Navigation Links -->
            <div class="flex flex-col lg:flex-row gap-4 text-center">
                <a href="#" class="hover:text-blue-400">Home</a>
