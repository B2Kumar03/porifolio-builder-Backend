                <a href="#projects" class="hover:text-blue-400">Projects</a>
                <a href="#contact" class="hover:text-blue-400">Contact</a>
            </div>
            <!-- Social Media Icons -->
            <div class="flex gap-4">
              
               
                <a href="{{contact.linkedin}}" class="text-gray-400 hover:text-blue-500" target="_blank">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a href="{{contact.github}}" class="text-gray-400 hover:text-gray-400" target="_blank">
                    <i class="fab fa-github"></i>
                </a>
                <a href="mailto:{{contact.email}}" class="text-gray-400 hover:text-blue-500" target="_blank">
